<UserControl x:Class="WordStrata.SnakePlane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:diag="clr-namespace:System.Diagnostics;assembly=WindowsBase"
             xmlns:local="clr-namespace:WordStrata"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <local:StrokeValueConverter x:Key="StrokeValueConverter"/>
    </UserControl.Resources>
    <Canvas Width="1" Height="1">
        <ItemsControl ItemsSource="{Binding Snakes}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Polyline Points="{Binding Points}" StrokeLineJoin="Round" Stroke="{Binding Color}" StrokeEndLineCap="Triangle" StrokeStartLineCap="Flat"
                              Opacity=".4">
                        <Polyline.StrokeThickness>
                            <MultiBinding Converter="{StaticResource StrokeValueConverter}">
                                <Binding RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=Window}" Path="DataContext.GameBoard" />
                                <Binding RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=Window}" Path="DataContext.Paths" />
                            </MultiBinding>
                        </Polyline.StrokeThickness>
                    </Polyline>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Canvas>
</UserControl>
