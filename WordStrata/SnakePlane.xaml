<UserControl x:Class="WordStrata.SnakePlane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:diag="clr-namespace:System.Diagnostics;assembly=WindowsBase"
             xmlns:local="clr-namespace:WordStrata"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <local:StrokeValueConverter x:Key="StrokeValueConverter"/>
        <local:EllipseVisibilityConverter x:Key="EllipseVisibility"/>
    </UserControl.Resources>
    <ItemsControl ItemsSource="{Binding Snakes}">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <Canvas Width="100" Height="100"/>
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Canvas>
                    <Polyline  Points="{Binding Points}" StrokeLineJoin="Round" Stroke="{Binding SnakeColor}" StrokeEndLineCap="Triangle" StrokeStartLineCap="Round"
                              Opacity=".5" IsHitTestVisible="False">
                        <Polyline.StrokeThickness>
                            <MultiBinding Converter="{StaticResource StrokeValueConverter}">
                                <Binding RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=Window}" Path="DataContext.GameBoard" />
                                <Binding RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=Window}" Path="DataContext.Paths" />
                            </MultiBinding>
                        </Polyline.StrokeThickness>
                    </Polyline>
                    <Path Stroke="{Binding SnakeColor}" StrokeThickness="8" Opacity=".5" Visibility="{Binding Points,Converter={StaticResource EllipseVisibility} }" IsHitTestVisible="False">
                        <Path.Data>
                            <EllipseGeometry 
                                Center="{Binding Points[0]}" />
                        </Path.Data>
                    </Path>
                </Canvas>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>
